{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"rootDir": ".",
		"declaration": true,
		"downlevelIteration": true,
		"paths": {
			"math/*": ["math/*"],
			"utils/*": ["utils/*"]
		},
		"baseUrl": "."
	},
	"exclude": ["node_modules", "tests", "jest.config.js", "**/**.js", "**/**.d.ts"]
}
